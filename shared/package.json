{
  "name": "@listit/shared",
  "version": "1.0.0",
  "description": "Shared types and utilities for ListIt application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "default": "./dist/types/*.js"
    },
    "./enums/*": {
      "types": "./dist/enums/*.d.ts",
      "default": "./dist/enums/*.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "typescript": "^5.0.0"
  }
}
